@model Product
@{

    var id = Model.laptopid;
}
<h1 class="h3">Ürün Güncelle</h1>
<hr>
<h4 style="color:red;">Boş alan varsa veri veritabanına eklenmez.</h3>
    <hr>
    <div class="row">
        <div class="col-md-8">
            <form asp-controller="Admin" asp-action="Edit" method="POST">
                <input type="hidden" name="laptopid" value="@id">
                <div class="form-group row">
                    <label asp-for="Baslik" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Baslik">
                    </div>

                </div>
                <div class="form-group row">
                    <label asp-for="Fiyat" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Fiyat">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Marka" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Marka">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Model" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Model">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="EkranBoyutu" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="EkranBoyutu">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="EkranKarti" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="EkranKarti">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="IslemciModeli" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="IslemciModeli">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="IsletimSistemi" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="IsletimSistemi">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="DiskKapasitesi" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="DiskKapasitesi">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="BellekKapasitesi " class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="BellekKapasitesi ">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="DiskTuru" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="DiskTuru">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Puan" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Puan">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Ürün Güncelle</button>
                    </div>
                </div>
            </form>
        </div>
    </div>